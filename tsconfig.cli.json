{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist",
    "isolatedModules": false,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/cli/simple-cli.ts",
    "src/cli/simple-commands/**/*.js",
    "src/cli/simple-commands/**/*.ts",
    "src/cli/command-registry.js",
    "src/cli/init/**/*.js",
    "src/cli/init/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/agents",
    "src/swarm",
    "src/memory",
    "src/terminal",
    "src/cli/commands/**/*",
    "src/mcp/**/*",
    "src/core/**/*",
    "src/coordination/**/*",
    "src/task/**/*"
  ]
}